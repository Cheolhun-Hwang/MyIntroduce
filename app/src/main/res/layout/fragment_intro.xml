<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myself.hch.myintroduce.introFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="363dp"
                    android:layout_height="242dp"
                    app:layout_constraintHorizontal_bias="0.125"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/funtogether" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="11dp"
                    android:text="자기소개"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="저는 좋아하는 것에 대한 강한 집착이 있습니다. 그 중 하나가 전공인 소프트웨어 제작입니다. 소프트웨어는 다양한 분야가 많습니다. 하지만 그 분야 중 제가 원하는 분야가 어떤 것인지 몰라 여러 경험을 통해 찾아나가고 있습니다. 되도록 재밌는 분야나 재능이 있는 분야를 찾기 위해 공부를 넘어서 해커톤이나 공모전 등 다양한 경험을 갖으며 객관적인 판단을 가질 수 있도록 하고 있습니다."
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="19dp"
                    android:layout_weight="1"
                    android:text="이거 좋아하세여?"
                    android:textSize="20dp"
                    app:layout_constraintHorizontal_bias="0.03"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView23" />

                <Button
                    android:id="@+id/radioPopbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click Me"
                    android:layout_marginTop="41dp"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroup_popup"
                    android:layout_marginLeft="252dp"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <RadioGroup
                    android:id="@+id/radioGroup_popup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="37dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="9dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView24">

                    <RadioButton
                        android:id="@+id/getDoll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="인형뽑기"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="440dp" />

                    <RadioButton
                        android:id="@+id/seemovie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="영화보기"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="440dp" />

                    <RadioButton
                        android:id="@+id/playGame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="게임하기"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="440dp" />

                    <RadioButton
                        android:id="@+id/getBlog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="블로그하기"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="440dp" />

                </RadioGroup>

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
